	echo "Sequencing run without inline barcodes. Skipping analysis of combinatorial indices and performing only denoising"
	find . -type f
	python /Code/Amplicon_TerraPipeline.py --config /cromwell-executions/ampseq/b930ecf8-86c4-4711-9da3-a75d3cf38744/call-ampseq_pipeline/attempt-2/inputs/1102666859/write_json_c76ceddb927ed4132eade3272708f0ef.tmp --terra --meta --adaptor_removal --separate_reads --primer_removal --dada2 --postproc_dada2 --asv_to_cigar
	find . -type f
